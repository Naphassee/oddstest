<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex gap-4">
    <%= form.text_field :title, placeholder: "CREATE NEW QUEST", class: "border-none bg-gradient-to-br from-blue-50 to-purple-50 rounded-lg px-4 py-2 w-full text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    <div class="bg-green-100 hover:bg-green-200 text-green-600 px-6 py-3 rounded-xl font-medium transition-colors flex items-center gap-2">
      <%= form.submit "+ add" %>
    </div>
  </div>

<% end %>
